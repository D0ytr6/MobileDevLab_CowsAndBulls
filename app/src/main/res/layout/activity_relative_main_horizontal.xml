<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/pressed_view"
        android:cursorVisible="false"
        android:focusableInTouchMode="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/try_list"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:divider="@null"
        android:layout_below="@id/pressed_view" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/try_list"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_result"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/button_0"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:text="0" />

        <Button
            android:id="@+id/button_1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/button_0"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:text="1" />

        <Button
            android:id="@+id/button_2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/button_1"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:text="2" />

        <Button
            android:id="@+id/button_3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/button_2"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:text="3" />

        <Button
            android:id="@+id/button_4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/button_3"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:text="4" />

        <Button
            android:id="@+id/button_del"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginRight="25dp"
            android:text="DEL" />

        <Button
            android:id="@+id/button_5"
            android:layout_below="@id/button_0"
            android:layout_alignParentLeft="true"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:text="5" />

        <Button
            android:id="@+id/button_6"
            android:layout_below="@id/button_1"
            android:layout_toRightOf="@id/button_5"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:text="6" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_below="@id/button_2"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/button_6"
            android:text="7" />

        <Button
            android:id="@+id/button_8"
            android:layout_below="@id/button_3"
            android:layout_toRightOf="@id/button_7"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            android:layout_below="@id/button_3"
            android:layout_toRightOf="@id/button_8"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:text="9" />

        <Button
            android:id="@+id/button_submit"
            android:layout_below="@id/button_del"
            android:layout_alignParentRight="true"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_marginRight="25dp"
            android:text="OK" />

        </RelativeLayout>

    </RelativeLayout>