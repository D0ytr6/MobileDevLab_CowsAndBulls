<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cow_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/cow_pic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cow_img"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/start_btn"
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="50dp"
                android:text="Start Game" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/difficulties"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:hint="Choose game mode"
                android:layout_toRightOf="@id/start_btn">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_menu_modes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/about_btn"
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="50dp"
                android:text="About Developer" />

            <Button
                android:id="@+id/close_btn"
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_toRightOf="@id/about_btn"
                android:text="Close"/>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>